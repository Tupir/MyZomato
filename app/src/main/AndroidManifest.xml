<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.myzomato">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_restaurant_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <provider
            android:name=".data.RestaurantProvider"
            android:authorities="com.example.android.myzomato"
            android:exported="false" />

        <service
            android:name=".sync.ZomatoSyncIntentService"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".detail.DetailActivity"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity android:name=".settings.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme1">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".settings.SettingsRestaurantActivity"/>
        </activity>


        <activity
            android:name=".settings.SettingsRestaurantActivity"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity">
        </activity>

    </application>

</manifest>